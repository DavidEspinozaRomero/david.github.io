extend ./components/template.pug

block head-test
	link(rel="stylesheet" href="./css/contact.css")

block content
	main.main-contact
		h1.main-h1 Es un gusto conocerte!
		form(class='contact-form' action="/message", method="post" autocomplete='on')
			label(for="fullname") *Name
			input(type="text" id='fullname' name='fullname' placeholder='Charles Keanu Reeves' autofocus)
			label(for="email") *Email
			input(type="email", id='email' name="email" value='email@gmail.com')
			label(for="comment") Comment
			input(type="text" id='comment' name='comment' )
			input.btn-contact(type="button", value="Send")
